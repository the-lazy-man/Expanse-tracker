<html>
    <head>
        <title>
            <%=title%>
        </title>
        <script src="https://kit.fontawesome.com/64ac5a41e2.js" crossorigin="anonymous"></script>
        <style>
            body{
                font-family: sans-serif;
                text-align: center;
                background-color: yellowgreen;
                }   
            li {
                border: 5px solid black; /* set border properties */
                padding: 40px; /* add padding to separate content from border */
                display: inline-block;
                } 
        </style>
    </head>
    <body>
        <h1>Home page</h1>
        <div>
            <ul>
                <%for(i of list) {%>
                    <li>
                        <p>=><%=i.name%></p>
                        <p><%=i.price%></p>
                        <%count=count+i.price%>
                        <a href="/delete-contact/?id=<%= i._id %> " > <i class="fas fa-window-close"></i></a>
                    </li>
                <%}%>
                <h3>Total Expence <%=count%></h3>
            </ul>
        </div>
        <form action="/submit" method="POST">
            <input type="text" name="name" placeholder="ENTER Expence name" required>
            <input type="number" name="price" placeholder="ENTER amount" required>
            <button>ADD TO LIST</button>
        </form>
    </body>
</html>